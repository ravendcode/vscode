{
/*
	// Place your snippets for PHP - Laravel Blade here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
    "blade extends": {
        "prefix": "ext",
        "body": [
            "@extends('${1:layouts.app}')"
        ],
        "description": "blade extends"
    },
    "blade echo": {
        "prefix": "jj",
        "body": [
            "{{ $1 }}"
        ],
        "description": "blade echo"
    },
    "blade unless": {
        "prefix": "un",
        "body": [
            "@unless ($1)",
			"\t$2",
			"@endunless"
        ],
        "description": "blade unless"
    },
    "blade foreach": {
        "prefix": "foreach",
        "body": [
            "@foreach ($1)",
			"\t$2",
			"@endforeach"
        ],
        "description": "blade foreach"
    },
    "blade if": {
        "prefix": "if",
        "body": [
            "@if ($1)",
			"\t$2",
			"@endif"
        ],
        "description": "blade if"
    },
    "blade if else": {
        "prefix": "ife",
        "body": [
            "@if ($1)",
			"\t$2",
			"@else",
			"\t$3",
			"@endif"
        ],
        "description": "blade if else"
    },
    "blade forelse": {
        "prefix": "fore",
        "body": [
            "@forelse ($1)",
			"\t$2",
			"@empty",
			"\t$3",
			"@forelse"
        ],
        "description": "blade forelse"
    },
    "blade section": {
        "prefix": "sec",
        "body": [
            "@section('${1:content}')",
			"\t$2",
			"@endsection"
        ],
        "description": "blade section"
    },
    "blade section title": {
        "prefix": "sect",
        "body": [
            "@section('${1:title}', '$2')"
        ],
        "description": "blade section title"
    },
    "blade yeild": {
        "prefix": "y",
        "body": [
            "@yield('${1:content}')"
        ],
        "description": "blade yeild"
    }
}
