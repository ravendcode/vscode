{
	// Place your snippets for nunjucks here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"nunjucks {{}}": {
		"prefix": "jj",
		"body": [
			"{{ $1 }}"
		]
	},
	"nunjucks %": {
		"prefix": "jjj",
		"body": [
			"{% $1 %}"
		]
	},
	"nunjucks {{ img('file') }}": {
		"prefix": "jji",
		"body": [
			"{{ img('$1') }}"
		]
	},
	"nunjucks if": {
		"prefix": "jif",
		"body": [
			"{% if $1 %}",
			"\t$2",
			"{% endif %}"
		]
	},
	"nunjucks title": {
		"prefix": "jt",
		"body": [
			"{% set ${1:app_title} = \"$2\" %}"
		]
	},
	"nunjucks title inline": {
		"prefix": "jtl",
		"body": [
			"{% block title %}$1{% endblock %}"
		]
	},
	"nunjucks block inline": {
		"prefix": "jbl",
		"body": [
			"{% block ${1:body} %}$2{% endblock %}"
		]
	},
	"nunjucks block": {
		"prefix": "jb",
		"body": [
			"{% block ${1:body} %}",
			"\t$2",
			"{% endblock %}"
		]
	},
	"nunjucks macro": {
		"prefix": "jm",
		"body": [
			"{% macro $1 %}",
			"\t$2",
			"{% endmacro %}"
		]
	},
	"nunjucks extends": {
		"prefix": "je",
		"body": [
			"{% extends \"${1:base}.njk\" %}"
		]
	},
	"nunjucks for": {
		"prefix": "jfor",
		"body": [
			"{% for $1 in $2 %}",
			"\t$3",
			"{% endfor %}"
		]
	},
	"nunjucks include": {
		"prefix": "ji",
		"body": [
			"{% include \"blocks/${1:_header}.njk\" %}"
		]
	},
	"nunjucks require": {
		"prefix": "jr",
		"body": [
			"<%= require('$1') %>"
		]
	}
}
